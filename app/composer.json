{
  "require": {
    "ext-simplexml": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "php": ">=7.4.0",
    "symfony/console": "^5.1",
    "php-di/php-di": "^6.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^8.5",
    "phpstan/phpstan": "^1.9",
    "squizlabs/php_codesniffer": "*"
  },
  "autoload": {
    "psr-4": {
      "Life\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Life\\": "tests/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit ./tests",
    "cs": "php vendor/bin/phpcs --extensions=php --encoding=utf-8 -sp ./src",
    "stan": "php ./vendor/bin/phpstan.phar analyse -l max -c ./phpstan.neon -vvv ./src",
    "stan-baseline": "php ./vendor/bin/phpstan.phar analyse -l max -c ./phpstan.neon -vvv ./src --generate-baseline"
  }
}
